.container{
  width: 100%;
  height: 100%;
  position: relative;
  overflow: auto;
}
.header{
  width: 100%;
  height: 410rpx;
  position: relative;
}
.header .bg{
  width: 100%;
  height: 360rpx;
  position: absolute;
  top: 0;
  left: 0;
}
.userimagebox{
  width: 120rpx;
  height: 120rpx;
  position: absolute;
  top: 88rpx;
  left: 44rpx;
  background: #fff;
  padding: 4rpx;
  border-radius: 50%;
}
.userimagebox image{
  width: 100%;
  height: 100%;
  border-radius: 50%;
}
.username{
  width: 300rpx;
  line-height: 2;
  font-size: 30rpx;
  color: #fff;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  position: absolute;
  top: 120rpx;
  left: 190rpx;
}
.dhicon{
  width: 25rpx;
  height: 25rpx;
  position: absolute;
  top: 126rpx;
  right: 151rpx;
}
.progress_num{
  font-size: 24rpx;
  color: #fff;
  line-height: 1;
  position: absolute;
  right: 40rpx;
  top: 113rpx;
}
.progress_num text{
  font-size: 40rpx;
  margin-right: 10rpx;
}
.progress{
  width: 180rpx;
  height: 4rpx;
  position: absolute;
  right: 40rpx;
  top: 174rpx;
  background: #707070;
}
.progress_in{
  width: 100%;
  height: 100%;
  background: #E04F2E;
}
.dhdetail{
  width: 120rpx;
  height: 30rpx;
  font-size: 20rpx;
  color: #fff;
  line-height: 26rpx;
  text-align: center;
  border: 1rpx solid #fff;
  border-radius: 15rpx;
  position: absolute;
  top: 207rpx;
  right: 43rpx;
}
.progress_text{
  font-size: 22rpx;
  color: #fff;
  line-height: 1;
  position: absolute;
  right: 40rpx;
  top: 40rpx;
}
.progress_text text{
  color: #E04F2E;
}
.progress_btn{
  width: 140rpx;
  height: 40rpx;
  font-size: 22rpx;
  color: #fff;
  text-align: center;
  line-height: 40rpx;
  background: #E04F2E;
  border-radius: 20rpx;
  position: absolute;
  right: 40rpx;
  top: 44rpx;
}
.classify{
  width: 670rpx;
  height: 140rpx;
  box-shadow:0 4rpx 16rpx 0 rgba(49,41,39,0.3);
  background: #fff;
  position: absolute;
  top: 280rpx;
  left: 40rpx;
  border-radius: 16rpx;
}
.option{
  width: 167rpx;
  height: 70rpx;
  margin-top: 35rpx;
  border-right: 1rpx solid #ddd;
  float: left;
  position: relative;
}
.option:last-child{
  border: none;
}
.option_pic{
  width: 60rpx;
  height: 60rpx;
  position: absolute;
  top:-11rpx;
  left: 53rpx; 
}
.option_num{
  width: 50rpx;
  height: 30rpx;
  background: #DA4E7B;
  font-size: 20rpx;
  line-height: 30rpx;
  text-align: center;
  color: #fff;
  position: absolute;
  top: -16rpx;
  left: 104rpx;
  border-radius: 50%;
}
.option_title{
  width: 100%;
  line-height: 1;
  text-align: center;
  font-size: 20rpx;
  color: #312927;
  position: absolute;
  top: 52rpx;
  left: 0;
}
.list{
  padding-top: 10rpx;
  background: #fff;
  margin-bottom: 84rpx;
}
.division{
  width: 100%;
  height: 30rpx;
  background: #F2F2F2;
}
.entrance{
  width: 100%;
  height: 120rpx;
  font-size: 26rpx;
  line-height: 120rpx;
  color: #312927;
  padding-left: 42rpx;
  position: relative;
}
.middlechild{
  border-bottom: 1rpx solid #DCDCDC;
}
.entrance image{
  width: 10rpx;
  height: 18rpx;
  position: absolute;
  right: 42rpx;
  top: 51rpx;
}
.detail_num{
  font-size: 26rpx;
  color: #888888;
  position: absolute;
  right: 66rpx;
  top: 0;
  line-height: 120rpx;
  height: 120rpx;
}
.leader{
  width: 670rpx;
  height: 150rpx;
  box-shadow:0 4rpx 10rpx 0 rgba(49,41,39,0.45);
  margin-left: 40rpx;
  margin-bottom: 100rpx;
  border-radius: 20rpx;
}