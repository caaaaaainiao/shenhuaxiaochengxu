  <view class="g-tabHeader">
    <view class="item {{tabContent[0]?'on':''}}" bindtap="btnTabSwitch" data-id="0">绑定会员卡</view>
    <view class="item {{tabContent[1]?'on':''}}" bindtap="btnTabSwitch" data-id="1">办理会员卡</view>
  </view>
  <block wx:if="{{tabContent[0]}}">
    <view class="panel">
      <image src="http://wx.80piao.com:83/cdnimg/card45.png" class="icon" mode="widthFix"></image>
    </view>
    <view class="form">
      <view class="item">
        <input placeholder="输入您的会员卡号/手机号" class="input" value="{{inputNum}}" bindinput="getNum" bindblur="btnBlurInput" placeholder-class="phColor" />
      </view>
      <view class="item">
        <input placeholder="输入您的会员卡密码" class="input" value="{{inputPass}}" bindinput="" bindblur="getPass" placeholder-class="phColor" />
      </view>
