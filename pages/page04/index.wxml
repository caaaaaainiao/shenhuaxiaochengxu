				<picker bindchange="bindPickerChange999" value="{{index999}}" range="{{array999}}"><view class="picker gray">{{array999[index999]}}</view></picker>
			</view> -->
    </view>
    <view class="operate">
      <button class="btns btns1" bindtap="querenbangding" hover-class="none">绑定会员卡</button>
      <button class="btns btns2" bindtap="zhuce" hover-class="none" data-id="1">还没有会员卡?在线开通，立享多重观影福利！</button>
    </view>
  </block>
  <block wx:if="{{isShow}}">
    <view class="alert alert-exchange">
      <view class="over-close" bindtap="btnShowExchange2"></view>
      <view class="box-bottom">
        <view class="title" style="text-align: center;">选择会员卡号</view>
        <view class="choose">
          <block wx:for="{{memberPhones}}">
            <button class="item {{item.checked?'on':''}}" bindtap="btnChoose" data-id="{{index}}" data-cardNo="{{item}}" hover-class="none">
              {{item}}
            </button>
          </block>
        </view>
        <view class="operate">
          <!-- <button class="btn btn-red" bindtap="" hover-class="none">确认</button> -->
        </view>
      </view>
    </view>
  </block>
