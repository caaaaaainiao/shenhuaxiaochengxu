/* pages/myprize/myprize.wxss */
.container{
  width: 100%;
  height: 100%;
  background: #f2f2f2;
  position: relative;
}
.line{
  width: 100%;
  height: 30rpx;
}
.prize{
  width:750rpx;
  height:240rpx;
  background:#fff;
  border:1px solid #ddd;
  position: relative;
  margin-bottom: 30rpx;
}
.icon{
  width: 160rpx;
  height: 160rpx;
  position: absolute;
  top: 40rpx;
  left: 40rpx;
}
.name{
  width: 310rpx;
  line-height: 1;
  font-size: 32rpx;
  font-weight: bold;
  position: absolute;
  left: 230rpx;
  top: 53rpx;
}
.scope{
  width: 310rpx;
  line-height: 1;
  font-size: 24rpx;
  color: #888888;
  position: absolute;
  left: 230rpx;
  top: 112rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.time{
  /* width: 310rpx; */
  line-height: 1;
  font-size: 24rpx;
  color: #888888;
  position: absolute;
  left: 230rpx;
  top: 165rpx;
}
.right{
  width: 200rpx;
  height: 200rpx;
  position: absolute;
  right: 0;
  top: 20rpx;
  color: #E04F2E;
  border-left: 1rpx solid #DDDDDD;
}
/* .status{
  width: 100rpx;
  height: 49rpx;
  position: absolute;
  right: 46rpx;
  top: 77rpx;
} */
.status{
  width: 177rpx;
  height: 91rpx;
  position: absolute;
  right: 0;
  bottom: 20rpx;
  z-index: 9;
}
/* 弹出层 */
.white{
  width: 100%;
  height: 100%;
  background: rgba(255,255,255,.5);
  position: fixed;
  top: 0;
  left: 0;
  z-index: 9;
}
.charge{
  width:535rpx;
  height:290rpx;
  background:rgba(107,107,117,1);
  border-radius:20rpx;
  position: absolute;
  top: 50%;
  margin-top: -200rpx;
  left: 107rpx;
  font-size: 26rpx;
  color: #fff;
  line-height: 44rpx;
  text-indent: 1em;
  padding: 30rpx 40rpx;
}
.chargebtn{
  width: 150rpx;
  height: 60rpx;
  background: url() no-repeat;
  background-size: cover;
  position: absolute;
  left: 192rpx;
  bottom: 30rpx;
}
.close{
  width: 48rpx;
  height: 121rpx;
  background: url() no-repeat;
  background-size: cover;
  position: absolute;
  right: 5rpx;
  bottom: -121rpx;
}
.empty{
  width: 100%;
  height: 100%;
  background: #fff;
  position: relative;
  overflow: hidden;
  padding-top: 230rpx;
}
.empty image{
  width: 342rpx;
  height: 255rpx;
  margin: 0 auto 70rpx;
  display: block;
}
.emptytext{
  width: 100%;
  font-size: 30rpx;
  color:#888888;
  text-align: center;
  line-height: 1;
}