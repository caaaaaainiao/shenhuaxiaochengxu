/* pages/waitPay/waitPay.wxss */
.container{
  width: 100%;
  height: 100%;
  position: relative;
  overflow: hidden;
}
.bg{
  width: 100%;
  height: 1206rpx;
  position: absolute;
  top: 0;
  left: 0;
}
.content{
  width: 100%;
  height: 100%;
  overflow: auto;
}
.movie{
  width: 710rpx;
  background: #fff;
  border-radius: 16rpx 16rpx 0 0;
  margin: auto;
  padding: 88rpx 40rpx 20rpx;
  position: relative;
  color: #322D2B;
}
.top{
  padding-top: 60rpx;
  border-radius: 16rpx 16rpx 0 0;
}
.movieName{
  width: 450rpx;
  line-height: 1;
  font-size: 48rpx;
  font-weight: bold;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  margin-bottom: 27rpx;
}
.movieTime,.movieArea{
  width: 450rpx;
  line-height: 1;
  font-size: 24rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  margin-bottom: 16rpx;
}
.seats{
  width: 450rpx;
  line-height: 1;
  font-size: 22rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  /* margin-bottom: 16rpx; */
  color: #878787;
}
.seats text{
  margin-right: 20rpx;
}
.poster{
  width: 140rpx;
  height: 196rpx;
  position: absolute;
  top: 60rpx;
  right: 40rpx;
}
.line{
  width: 710rpx;
  height: 34rpx;
  margin-left: 20rpx;
  display: block;
}
.movieewm,.foodewm{
  width: 710rpx;
  margin-left: 20rpx;
  background: #fff;
  padding-bottom: 10rpx;
}
.title{
  font-size: 36rpx;
  padding-left: 40rpx;
  font-weight: bold;
  margin-bottom: 60rpx;
}
.ewm{
  width: 300rpx;
  height: 300rpx;
  display: block;
  margin: 0 auto 50rpx;
}
.ticketnum{
  font-size: 26rpx;
  color: #878787;
  text-align: center;
  margin-bottom: 40rpx;
}
.number{
  width: 540rpx;
  height: 70rpx;
  line-height: 68rpx;
  font-size: 26rpx;
  color: #878787;
  text-align: center;
  border: 1rpx solid #DCDCDC;
  margin:  auto;
}
.number text{
  font-size: 30rpx;
  color: #322D2B;
  margin-left: 30rpx;
  font-weight: bold;
}
.food{
  font-size: 24rpx;
  color:#878787;
  line-height:1;
  padding:20rpx 40rpx;
  width:710rpx;
  margin:auto;
  background:#fff;

}
.food text{
  float: right;
}
.other{
  width: 710rpx;
  background: #fff;
  padding-bottom: 20rpx;
  margin: 0 auto 20rpx;
  border-radius: 0 0 16rpx 16rpx;
}
.address{
  width: 630rpx;
  padding: 50rpx 0 40rpx; 
  position: relative;
  margin: auto;
  border-bottom: 1rpx solid #DCDCDC;
}
.storename{
  font-size: 36rpx;
  line-height: 1;
  margin-bottom: 30rpx;
  font-weight: bold;
}
.storeaddress{
  width: 550rpx;
  font-size: 26rpx;
  color: #878787;
  line-height: 30rpx;
}
.phone{
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  top: 75rpx;
  right: 0;
}
.money{
  font-size: 36rpx;
  color: #878787;
  font-weight: bold;
  position: absolute;
  top: 50rpx;
  right: 0;
}
.descripe{
  font-size: 26rpx;
  color: #878787;
  line-height: 52rpx;
}

.refund{
  width: 320rpx;
  height: 80rpx;
  font-size: 30rpx;
  color: #888888;
  line-height: 78rpx;
  text-align: center;
  border-radius: 40rpx;
  margin: 100rpx auto 60rpx;
  border: 1rpx solid #AAAAAA;
}
.refunded{
  width: 177rpx;
  height: 91rpx;
  margin: 100rpx auto 60rpx;
}
.refunded image{
  width: 100%;
  height: 100%;
}
/* 确认退票 */
.black{
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 99;
  background: rgba(0,0,0,.7);
}
.black_content{
  width:540rpx;
  height:349rpx;
  background:#fff;
  box-shadow:0 4rpx 16rpx 0 rgba(224,79,46,0.3);
  border-radius:12rpx;
  position: absolute;
  top: 50%;
  left: 105rpx;
  margin-top: -200rpx;
  padding-top: 90rpx;
}
.text{
  width: 500rpx;
  text-align: center;
  line-height: 36rpx;
  font-size: 26rpx;
  color: #312927;
  margin: auto;
}
.cancel{
  width: 180rpx;
  height: 70rpx;
  line-height: 68rpx;
  text-align: center;
  font-size: 24rpx;
  color: #312927;
  border: 1rpx solid #312927;
  border-radius: 35rpx;
  position: absolute;
  bottom: 54rpx;
  left: 43rpx;
}
.sure{
  width: 180rpx;
  height: 70rpx;
  line-height: 68rpx;
  text-align: center;
  font-size: 24rpx;
  color: #E04F2E;
  border: 1rpx solid #E04F2E;
  border-radius: 35rpx;
  position: absolute;
  bottom: 54rpx;
  right: 43rpx;
}

/* 立即支付 */
.wait{
  width: 100%;
  height: 245rpx;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 9;
}
.endtime{
  width: 100%;
  text-align: center;
  font-size: 24rpx;
  color: #FFFFFF;
  line-height: 1;
  position: absolute;
  left: 0;
  top: 50rpx;
}
.cancel2{
  width: 240rpx;
  height: 60rpx;
  border: 2rpx solid #fff;
  line-height: 58rpx;
  font-size: 24rpx;
  color: #fff;
  text-align: center;
  position: absolute;
  left: 90rpx;
  bottom: 60rpx;
  border-radius: 30rpx;
}
.pay{
  width: 240rpx;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 24rpx;
  color: #E04F2E;
  text-align: center;
  position: absolute;
  right: 90rpx;
  bottom: 60rpx;
  background: #fff;
  border-radius: 30rpx;
}
.box{
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  padding-top: 245rpx;
  z-index: 6;
}
.black{
  width: 100%;
  height: 100%;
  background: rgba(0,0,0,.2);
  position: fixed;
  top: 0;
  left: 0;
  z-index: 99;
}
.checkarea{
  width: 100%;
  background: #fff;
  border-radius: 20rpx 20rpx 0 0;
  position: absolute;
  bottom: 0;
  left: 0;
}
.checktitle{
  width: 100%;
  height: 125rpx;
  border-bottom: 1rpx solid #EEEEEE;
  line-height: 125rpx;
  font-size: 30rpx;
  color: #312927;
  padding-left: 40rpx;
  font-weight: bold;
}
.close{
  width: 24rpx;
  height: 24rpx;
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  z-index: 9;
}
.close image{
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
}
.way{
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  font-size: 30rpx;
  color: #312927;
  padding-left: 290rpx;
  border-bottom: 1rpx solid #EEEEEE;
}
.way image{
  width: 36rpx;
  height: 36rpx;
  margin-right: 20rpx;
  margin-top: 32rpx;
  /* display: inline-block; */
  float: left;
}
.way text{
  float: left;
}
.black2{
  width: 100%;
  height: 100%;
  background: rgba(0,0,0,.5);
  position: fixed;
  top: 0;
  left: 0;
  z-index: 99;
}
.close2{
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  top: 20rpx;
  right: 20rpx;
}
.add2{
  width: 100%;
  height: 560rpx;
  background: #fff;
  padding-top: 100rpx;
  border-radius: 16rpx 16rpx 0 0;
  position: absolute;
  left: 0;
  bottom: 0;
}
.input2{
  width: 540rpx;
  height: 80rpx;
  background: #EEEEEE;
  margin: 0 auto 160rpx;
  padding-left: 30rpx;
  border-radius: 16rpx;
}
.input2 input{
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 22rpx;
  color: #312927;
}
.tip2{
  width: 280rpx;
  line-height: 36rpx;
  font-size: 20rpx;
  color: #888888;
  position: relative;
  margin: 0 auto 55rpx;
}
.tip2 text{
  position: absolute;
  left: -10rpx;
  top: 0;
}
.submit2{
  width: 540rpx;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 30rpx;
  color: #fff;
  text-align: center;
  background: #E04F2E;
  margin: auto;
  border-radius: 40rpx;
}
.memo{
  width: 710rpx;
  background: #fff;
  margin: auto;
  position: relative;
  padding: 0 40rpx; 
}
.memobox{
  padding: 110rpx 0 45rpx;
  border-bottom: 1rpx solid #DCDCDC;
}
.memotitle{
  font-size: 36rpx;
  line-height: 1;
  font-weight: bold;
  color: #322D2B;
  position: absolute;
  top: 50rpx;
  left: 40rpx;
}
.memotext{
  font-size: 26rpx;
  color: #878787;
  line-height: 34rpx;
  word-break: break-all;
}
