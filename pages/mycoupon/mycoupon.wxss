/* pages/mycoupon/mycoupon.wxss */
.container{
  width: 100%;
  height: 100%;
  overflow: auto;
  position: relative;
  background: #F2F2F2;
}
.header{
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 22rpx;
  color: #312927;
  text-align: center;
  background: #fff;
  position: relative;
  margin-bottom: 30rpx;
}
.addCoupon{
  position: absolute;
  right: 40rpx;
  top: 0;
  height: 80rpx;
  display: inline-block;
  color: #E04F2E;
}
.coupon{
  width: 100%;
  height: 240rpx;
  background: #fff;
  position: relative;
  margin-bottom: 30rpx;
  color: #312927;
}
.icon{
  width: 50rpx;
  height: 50rpx;
  position: absolute;
  top: 50rpx;
  left: 25rpx;
}
.name{
  width: 410rpx;
  line-height: 1;
  font-size: 32rpx;
  font-weight: bold;
  position: absolute;
  left: 120rpx;
  top: 53rpx;
}
.scope{
  width: 410rpx;
  line-height: 1;
  font-size: 24rpx;
  color: #888888;
  position: absolute;
  left: 120rpx;
  top: 112rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.time{
  width: 410rpx;
  line-height: 1;
  font-size: 24rpx;
  color: #888888;
  position: absolute;
  left: 120rpx;
  top: 165rpx;
}
.right{
  width: 200rpx;
  height: 200rpx;
  position: absolute;
  right: 0;
  top: 20rpx;
  color: #E04F2E;
  border-left: 1rpx solid #DDDDDD;
}
.money{
  font-size: 24rpx;
  font-weight: bold;
  position: absolute;
  width: 100%;
  text-align: center;
  line-height: 1;
  top: 30rpx;
  left: 0;
}
.money text{
  font-size: 60rpx;
  margin-right: 5rpx;
}
.buy{
  width: 83rpx;
  height: 48rpx;
  border: 2rpx solid #E04F2E;
  text-align: center;
  line-height: 46rpx;
  border-radius: 24rpx;
  font-size: 24rpx;
  position: absolute;
  left: 59rpx;
  top: 122rpx;
}
.past .right{
  color: #888;
}
.past .buy{
  border-color: #888;
}
.past .name{
  color: #888;
}
.past .icon{
  filter: grayscale(100%)
}
.status{
  width: 177rpx;
  height: 91rpx;
  position: absolute;
  right: 0;
  bottom: 20rpx;
  z-index: 9;
}
/* 添加 */
.black{
  width: 100%;
  height: 100%;
  background: rgba(0,0,0,.5);
  position: fixed;
  top: 0;
  left: 0;
}
.add{
  width: 100%;
  height: 560rpx;
  background: #fff;
  padding-top: 100rpx;
  border-radius: 16rpx 16rpx 0 0;
  position: absolute;
  left: 0;
  bottom: 0;
}
.input{
  width: 540rpx;
  height: 80rpx;
  background: #EEEEEE;
  margin: 0 auto 60rpx;
  padding-left: 30rpx;
  border-radius: 16rpx;
}
.input input{
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 22rpx;
  color: #312927;
}
.tip{
  width: 280rpx;
  line-height: 36rpx;
  font-size: 20rpx;
  color: #888888;
  position: relative;
  margin: 0 auto 55rpx;
}
.tip text{
  position: absolute;
  left: -10rpx;
  top: 0;
}
.submit{
  width: 540rpx;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 30rpx;
  color: #fff;
  text-align: center;
  background: #E04F2E;
  margin: auto;
  border-radius: 40rpx;
}
.status{
  width: 177rpx;
  height: 91rpx;
  position: absolute;
  right: 0;
  bottom: 0;
}
.empty{
  width: 100%;
  height: calc(100% - 110rpx);
  background: #fff;
  position: relative;
  overflow: hidden;
  padding-top: 230rpx;
}
.empty image{
  width: 342rpx;
  height: 255rpx;
  margin: 0 auto 70rpx;
  display: block;
}
.emptytext{
  width: 100%;
  font-size: 30rpx;
  color:#888888;
  text-align: center;
  line-height: 1;
}
.more{
  width: 10rpx;
  height: 18rpx;
  position: absolute;
  right: 20rpx;
  top: 50%;
  transform: translateY(-50%)
}
.close{
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  top: 20rpx;
  right: 20rpx;
}