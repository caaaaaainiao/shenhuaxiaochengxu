/* pages/openCard/openCard.wxss */
.container{
  width: 100%;
  height: 100%;
  overflow: hidden;
  position: relative;
  padding-top: 4vh;
}
.option{
  width: 640rpx;
  height: 80rpx;
  background: #EEEEEE;
  border-radius: 6rpx;
  margin: 0 auto 30rpx;
  position: relative;
  overflow: hidden;
}
.icon{
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  left: 30rpx;
  top: 20rpx;
}
.title{
  height: 80rpx;
  line-height: 80rpx;
  position: absolute;
  left: 90rpx;
  top: 0;
  font-size: 26rpx;
  color: #888;
}
.option input{
  display: inline-block;
  height: 80rpx;
  line-height: 80rpx;
  position: absolute;
  left: 90rpx;
  top: 0;
  font-size: 26rpx;
  color: #333;
}
picker{
  width: 550rpx;
  height: 80rpx;
  position: absolute;
  left: 90rpx;
  top: 0;
  font-size: 26rpx;
  color: #333;
}
.sexbox{
  position: absolute;
  top: 0;
  left: 270rpx;
  overflow: hidden;
}
.sex{
  width: 60rpx;
  height: 80rpx;
  overflow: hidden;
  margin-right: 75rpx;
  float: left;
}
.radio{
  width: 20rpx;
  height: 20rpx;
  border: 1rpx solid #666666;
  float: left;
  margin-top: 30rpx;
  margin-right: 12rpx;
  border-radius: 50%;
}
.text{
  height: 80rpx;
  line-height: 80rpx;
  font-size: 26rpx;
  color: #666;
}
.radio2{
  width: 20rpx;
  height: 20rpx;
  float: left;
  margin-top: 30rpx;
  margin-right: 12rpx;
  display: block;
}
.btn{
  width:540rpx;
  height:80rpx;
  /* background:url("https://app.legendpicture.com/upload/seat/btnbg.png") no-repeat; */
  background-size:cover;
  margin:200rpx auto 0;
  font-size:30rpx;
  color:#FEFCFC;
  line-height:80rpx;
  text-align:center;

}