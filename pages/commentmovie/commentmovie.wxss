/* pages/commentmovie/commentmovie.wxss */
.contianer{
  width: 100%;
  height: 100%;
  position: relative;
  overflow: auto;
}
.title{
  width: 100%;
  height: 110rpx;
  line-height: 110rpx;
  font-size: 24rpx;
  color: #312927;
  /* text-align: center; */
  padding-left: 40rpx;
}
.area{
  width: 670rpx;
  height: 320rpx;
  background:#EEEEEE;
  border-radius: 16rpx;
  margin: 0 auto 50rpx;
  padding: 15rpx;
}
.area textarea{
  font-size: 24rpx;
  line-height: 36rpx;
  color: #312927;
}
.pre{
  width: 100%;
  height: auto;
  margin: auto;
  overflow: hidden;
  padding-left: 40rpx;
}
.text{
  height: 70rpx;
  padding: 0 36rpx;
  line-height: 70rpx;
  font-size: 24rpx;
  color: #888888;
  border: 2rpx solid #888888;
  float: left;
  margin-right: 40rpx;
  margin-bottom: 30rpx;
  border-radius: 35rpx;
}
.select{
  color: #E04F2E;
  border: 2rpx solid #E04F2E;
}
.btn{
  width: 540rpx;
  height: 80rpx;
  /* background:url('https://app.legendpicture.com/upload/seat/btnbg.png') no-repeat; */
  background-size: cover;
  margin: 100rpx auto;
  font-size: 30rpx;
  color: #FEFCFC;
  line-height: 80rpx;
  text-align: center;
}