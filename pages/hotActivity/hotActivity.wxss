/* pages/hotActivity/hotActivity.wxss */

.container {
  width: 100%;
  height: 100%;
  background: #f2f2f2;
  position: relative;
}

.line {
  width: 100%;
  height: 30rpx;
  background: #f2f2f2;
}

.activity {
  width: 710rpx;
  height: 450rpx;
  background: #fff;
  box-shadow: 0 1rpx 16rpx 0 rgba(0, 0, 0, 0.1);
  border-radius: 8rpx;
  margin: 0 auto 30rpx;
  position: relative;
  padding: 20rpx;
}

.pic {
  width: 100%;
  height: 280rpx;
  margin-bottom: 27rpx;
}

.name {
  width: 100%;
  line-height: 1;
  font-size: 30rpx;
  color: #312927;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  margin-bottom: 30rpx;
}

.time {
  height: 26rpx;
  line-height: 26rpx;
  font-size: 22rpx;
  color: #e04f2e;
  float: left;
}

.time image {
  width: 26rpx;
  height: 26rpx;
  margin-right: 10rpx;
}

.looked {
  height: 26rpx;
  line-height: 26rpx;
  font-size: 22rpx;
  color: #888;
  float: right;
}

.looked image {
  width: 26rpx;
  height: 26rpx;
  margin-right: 10rpx;
}

.empty{
  width: 100%;
  height: 100%;
  background: #fff;
  position: relative;
  overflow: hidden;
  padding-top: 230rpx;
}
.empty image{
  width: 342rpx;
  height: 255rpx;
  margin: 0 auto 70rpx;
  display: block;
}
.emptytext{
  width: 100%;
  font-size: 30rpx;
  color:#888888;
  text-align: center;
  line-height: 1;
}