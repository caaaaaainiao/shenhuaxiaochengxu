/* pages/movieDetail/movieDetail.wxss */
.container{
  width: 100%;
  /* height: 100%; */
  background: #fff;
  position: relative;
  overflow: auto;
  padding-bottom: 98rpx;
}
.header{
   width: 100%;
  height: 360rpx;
  position: relative;
}
.headerbox{
   width: 100%;
  height: 360rpx;
  position: relative;
  overflow: hidden;
}
.headerbg{
  width: 100%;
  height: 360rpx;
  filter: blur(30px);
  background-size: 100% 100%;
  position: relative;
}
.poster{
  width: 220rpx;
  height: 308rpx;
  background-repeat: no-repeat;
  background-size: cover;
  position: absolute;
  left: 40rpx;
  top: 72rpx;
}
.header_p{
  width: 400rpx;
  line-height: 1;
  color: #fff;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  position: absolute;
  left: 294rpx;
}
.moviename{
  font-size: 40rpx;
  font-weight: bold;
  top: 115rpx;
}
.moviename2{
  font-size: 22rpx; 
  top: 162rpx;
}
.duration{
  font-size: 22rpx; 
  top: 265rpx;
}
.time{
  font-size: 22rpx; 
  top: 305rpx;
}
.moviestyle{
  width: 400rpx;
  font-size: 22rpx;
  line-height: 26rpx;
  color: #fff;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  position: absolute;
  left: 294rpx;
  top: 222rpx;
}
.moviestyle text{
  display: inline-block;
  border: 1rpx solid #fff;
  height: 26rpx;
  padding: 0 9rpx;
  font-size: 18rpx;
  margin-left: 10rpx;
}
.middle{
  width: 100%;
  height: 150rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}
.middle view{
  width: 320rpx;
  height: 66rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  background: #F0F0F0;
  border-radius: 33rpx;
  margin: 0 15rpx;
}
.middle view image{
  width: 28rpx;
  height: 28rpx;
}
.middle view text{
  font-size: 26rpx;
  color: #312927;
  margin-left: 20rpx;
}
.middle .gray text{
  color: #888888;
}
.describe{
  width: 100%;
  height: auto;
  line-height:36rpx;
  font-size: 26rpx;
  color: #333;
  padding: 0 40rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 4;
  -webkit-box-orient: vertical;
}
.describe2{
  width: 100%;
  height: auto;
  line-height:36rpx;
  font-size: 26rpx;
  color: #333;
  padding: 0 40rpx;
}
.control{
  width: 100%;
  height: 80rpx;
  line-height: 75rpx;
  font-size: 24rpx;
  color: #2EACE0;
  text-align: center;
  border-bottom: 1rpx solid #F0F0F0;
}
.title{
  width: 100%;
  height: 66rpx;
  line-height: 66rpx;
  font-size: 26rpx;
  color: #312927;
  font-weight: bold;
  padding-left: 40rpx;
}
.actor_scroll{
  width: 100%;
  height: 260rpx;
  padding-left: 40rpx;
}
.actor_area,.videos_area{
  width: auto;
  white-space: nowrap;
}
.inactor{
  width: 140rpx;
  height: 100%;
  margin-right: 10rpx;
  display: inline-block;
}
.inactor image{
  width: 100%;
  height: 195rpx;
  margin-bottom: 5rpx;
}
.name{
  width: 100%;
  line-height: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  font-size: 24rpx;
  color: #312927;
  margin-bottom: 10rpx;
  text-align: center;
}
.role{
  width: 100%;
  line-height: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  font-size: 24rpx;
  color: #888888;
  text-align: center;
}
.videos_scroll{
  width: 100%;
  height: 170rpx;
  padding-left: 40rpx;
  overflow-x: auto;
}
.video{
  width: 298rpx;
  height: 168rpx;
  margin-right: 10rpx;
  display: inline-block;
}
.video video,.video image{
  width: 298rpx;
  height: 168rpx;
}
.comment{
  width: 670rpx;
  margin: auto;
  padding-top: 82rpx;
  border-bottom: 1rpx solid #F0F0F0;
  position: relative;
}
.comment:last-child{
  border: none;
}
.userpic{
  width: 50rpx;
  height: 50rpx;
  position: absolute;
  top: 20rpx;
  left: 0;
  border-radius: 50%;
}
.userpic image{
  width: 100%;
  height: 100%;
  border-radius: 50%;
}
.username{
  width: 400rpx;
  line-height: 1;
  font-size: 26rpx;
  color: #312927;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  position: absolute;
  left: 60rpx;
  top: 30rpx;
}
.praise{
  line-height: 1;
  font-size: 20rpx;
  color: #888888;
  position: absolute;
  top: 30rpx;
  right: 0;
}
.praise image{
  width: 22rpx;
  height: 22rpx;
  margin-right: 8rpx;
}
.text{
  width: 100%;
  font-size: 24rpx;
  color: #312927;
  line-height: 36rpx;
  margin-bottom: 15rpx;
}
.comment_time{
  line-height: 1;
  color: #888;
  font-size: 18rpx;
  margin-bottom: 30rpx;
}
.btn{
  width: 100%;
  height: 98rpx;
  background:linear-gradient(-84deg,rgba(224,79,46,1),rgba(224,117,46,1));
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 99;
  font-size: 30rpx;
  color: #fff;
  text-align: center;
  line-height: 98rpx;
}