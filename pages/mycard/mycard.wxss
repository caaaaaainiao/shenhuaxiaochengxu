/* pages/mycard/mycard.wxss */
.container{
  width: 100%;
  height: 100%;
  background: #fff;
  overflow: auto;
  position: relative;
}
.header{
  width: 100%;
  height: 500rpx;
  background: #F5F5F5;
  padding-top: 40rpx;
  position: relative;
  /* margin-bottom: 80rpx; */
}
.card{
  width: 743rpx;
  height: 431rpx;
  position: absolute;
  top: 40rpx;
  left: 0;
}
.cardnumber{
  font-size: 30rpx;
  line-height: 1;
  position: absolute;
  top: 72rpx;
  right: 60rpx;
  color: #312927;
}
.cardnumber text{
  font-size: 24rpx;
  margin-left: 25rpx;
}
.balance{
  width: 100%;
  line-height: 1;
  text-align: center;
  font-size: 26rpx;
  color: #312927;
  position: absolute;
  top: 214rpx;
  left: 0;
}
.balance text{
  line-height: 1;
  font-size: 48rpx;
  margin-left: 10rpx;
}
.input{
  width: 600rpx;
  height: 80rpx;
  margin: 80rpx auto 40rpx;
  background: #EEEEEE;
  border-radius: 8rpx;
  padding-left: 30rpx;
}
.input input{
  font-size: 24rpx;
  height: 80rpx;
  line-height: 80rpx;
  color: #312927;
}
.bang{
  width: 540rpx;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 30rpx;
  color: #fff;
  font-weight: bold;
  text-align: center;
  margin-left: 105rpx;
  border-radius: 40rpx;
  background: linear-gradient(to right, #DA4E7B, #2177B9);
}
/* 已是会员 */
.record{
  font-size: 20rpx;
  color: #888888;
  position: absolute;
  right: 20rpx;
  top: -10rpx;
  line-height: 1;
}
.record image{
 width: 18rpx;
 height: 18rpx;
 margin-left: 5rpx; 
 vertical-align: middle;
}
.control{
  width: 100%;
  height: 50rpx;
  margin-top: 40rpx;
  margin-bottom: 60rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  position: relative;
}
.style{
  line-height: 50rpx;
  font-size: 26rpx;
  color: #888888;
}
.chosed{
  color: #DA4E7B;
}
.progress{
  width: 200rpx;
  height: 50rpx;
  background: #EEEEEE;
  margin: 0 30rpx;
  border-radius: 25rpx;
}
.progressIn{
  width: 90rpx;
  height: 44rpx;
  background: #DA4E7B;
  border-radius: 22rpx;
  margin-left: 5rpx;
  margin-top: 3rpx;
  transition: all 0.2s linear;
}
.progressIn2{
  margin-left: 105rpx;
}
.money{
  width: 100%;
  padding: 0 40rpx;
  overflow: hidden;
  display: flex;
  justify-content: space-around;
  /* align-items: center; */
  align-content: space-around;
  flex-wrap: wrap;
}
.sum{
  width: 180rpx;
  height: 70rpx;
  line-height: 70rpx;
  text-align: center;
  font-size: 30rpx;
  color: #888888;
  border: 2rpx solid rgba(136,136,136,1);
  border-radius: 35rpx;
  margin-bottom: 50rpx; 
}
.sum:nth-child(4n){
  margin-right: 0;
}

.tips{
  color: red;
  font-size: 25rpx;
  margin-top: -10rpx;
}

.select{
  color: #DA4E7B;
  border: 2rpx solid #DA4E7B;
}
swiper{
  height: 550rpx;
}
.recharge{
  width: 540rpx;
  height: 80rpx;
  background:linear-gradient(to right, #DA4E7B, #2177B9);
  background-size: cover;
  margin: auto;
  font-size: 30rpx;
  color: #FEFCFC;
  line-height: 80rpx;
  text-align: center;
  border-radius: 40rpx;
}
.tip{
  width: 520rpx;
  color: #DA4E7B;
  font-size: 22rpx;
  line-height: 30rpx;
  margin: 100rpx auto 85rpx;
  position: relative;
}
.tip text{
  position: absolute;
  top: 0;
  left: -10rpx;
}
.unbind{
  width: 540rpx;
  height: 80rpx;
  font-size: 30rpx;
  color: #DA4E7B;
  text-align: center;
  line-height: 80rpx;
  border: 2rpx solid #DA4E7B;
  border-radius: 40rpx;
  margin: auto;
}
.activityText{
  width: 100%;
  line-height: 30rpx;
  font-size: 24rpx;
  color: #DA4E7B;
  text-align: center;
  margin-bottom: 100rpx;
}
.openCard{
  width: 540rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  margin-top: 30rpx;
  margin-left: 105rpx;
  color: #DA4E7B;
  font-size: 22rpx;
  border:2rpx solid #DA4E7B;
  border-radius: 40rpx;
}

.black2{
  width: 100%;
  height: 100%;
  background: rgba(0,0,0,.5);
  position: fixed;
  top: 0;
  left: 0;
  z-index: 99;
}

.add2{
  width: 100%;
  height: 560rpx;
  background: #fff;
  padding-top: 100rpx;
  border-radius: 16rpx 16rpx 0 0;
  position: absolute;
  left: 0;
  bottom: 0;
}

.close2{
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  top: 20rpx;
  right: 20rpx;
}

.input2{
  width: 540rpx;
  height: 80rpx;
  background: #EEEEEE;
  margin: 0 auto 160rpx;
  padding-left: 30rpx;
  border-radius: 16rpx;
}
.input2 input{
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 22rpx;
  color: #312927;
}
.input2 textarea{
  width: 100%;
  height: 100%;
  font-size: 22rpx;
  color: #312927;
  line-height: 80rpx;
}

.submit2{
  width: 540rpx;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 30rpx;
  color: #fff;
  text-align: center;
  background: #DA4E7B;
  margin: auto;
  border-radius: 40rpx;
}

.refresh{
  width: 140rpx;
  height:40rpx;
  margin: 0 auto;
  background:rgba(40,55,105,1);
  opacity:0.6;
  border-radius:20rpx;
  line-height: 1;
  text-align: center;
  font-size: 20rpx;
  color: #312927;
  position: absolute;
  top: 284rpx;
  left: 40%;
}

.refreshimg{
  width: 30rpx;
  height: 30rpx;
  position: relative;
  top: 7rpx;
}

.cardpassword{
  width:440rpx;
  height:500rpx;
  background:rgba(255,255,255,1);
  box-shadow:0px 8px 16px 0px rgba(23,42,63,0.2);
  border-radius:20rpx;
  position: fixed;
  left: 20%;
  top: 30%;
}

.cancel{
  width: 24rpx;
  height: 24rpx;
  position: absolute;
  right: 20rpx;
  top: 20rpx;
}

.lock{
  width: 120rpx;
  height: 85rpx;
  position: absolute;
  top: 55rpx;
  left: 155rpx;
}

.enter{
  width:360rpx;
  height:67rpx;
  background:rgba(238,238,238,1);
  border-radius:4rpx;
  position: absolute;
  top: 240rpx;
  left: 40rpx;
}

.line{
  width:100%;
  height:1rpx;
  background:rgba(218,78,123,1);
  position: absolute;
  top: 410rpx;
}

.sure{
  width: 100%;
  height: 90rpx;
  position: absolute;
  bottom: 0;
  text-align: center;
  line-height: 80rpx;
  color: #DA4E7B;
}

