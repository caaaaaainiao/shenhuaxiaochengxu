/* pages/comments/comments.wxss */
.container {
  width: 100%;
  height: 100%;
  background: #f2f2f2;
  position: relative;
}

.line {
  width: 100%;
  height: 30rpx;
  background: #f2f2f2;
}
.comment{
  width: 670rpx;
  margin: auto;
  padding-top: 82rpx;
  border-bottom: 1rpx solid #F0F0F0;
  position: relative;
}
.comment:last-child{
  border: none;
}
.userpic{
  width: 50rpx;
  height: 50rpx;
  position: absolute;
  top: 20rpx;
  left: 0;
  border-radius: 50%;
}
.userpic image{
  width: 100%;
  height: 100%;
  border-radius: 50%;
}
.username{
  width: 400rpx;
  line-height: 1;
  font-size: 26rpx;
  color: #312927;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  position: absolute;
  left: 60rpx;
  top: 30rpx;
}
.praise{
  line-height: 1;
  font-size: 20rpx;
  color: #888888;
  position: absolute;
  top: 30rpx;
  right: 0;
}
.praise image{
  width: 22rpx;
  height: 22rpx;
  margin-right: 8rpx;
}
.text{
  width: 100%;
  font-size: 24rpx;
  color: #312927;
  line-height: 36rpx;
  margin-bottom: 15rpx;
}
.comment_time{
  line-height: 1;
  color: #888;
  font-size: 18rpx;
  margin-bottom: 30rpx;
}