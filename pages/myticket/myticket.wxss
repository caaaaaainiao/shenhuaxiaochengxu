/* pages/myticket/myticket.wxss */
.container{
  width: 100%;
  height: 100%;
  background: #F2F2F2;
}
.line{
  width: 100%;
  height: 30rpx;
}
.seat{
  width: 100%;
  height: 200rpx;
  /* overflow: hidden; */
  border-top: 1rpx solid #ddd;
  border-bottom: 1rpx solid #ddd;
  position: relative;
  background: #fff;
}
.food{
  width: 100%;
  border-bottom: 1rpx solid #ddd;
  position: relative;
  background: #fff;
  /* overflow: hidden; */
}
.clear{
  clear: both;
}
.type{
  margin-bottom: 30rpx;
  position: relative;
}
.top{
  width: 26rpx;
  height: 26rpx;
  background: #F2F2F2;
  border-radius: 50%;
  position: absolute;
  top: -13rpx;
  left: 90rpx;
  z-index: 99;
}
.bottom{
  width: 26rpx;
  height: 26rpx;
  background: #F2F2F2;
  border-radius: 50%;
  position: absolute;
  bottom: -13rpx;
  left: 90rpx;
}
.left{
  width: 100rpx;
  height: 100%;
  position: absolute;
  left: 0;
  top: 0;
  border-right: 1rpx solid #eee;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.zuo{
  width: 50rpx;
  height: 50rpx;
  background: #DA4E7B;
  font-size: 30rpx;
  color: #fff;
  line-height: 48rpx;
  text-align: center;
  border-radius: 50%;
}
.shi{
  width: 50rpx;
  height: 50rpx;
  background: #2eace0;
  font-size: 30rpx;
  color: #fff;
  line-height: 48rpx;
  text-align: center;
  border-radius: 50%;
}
.right{
  width: 650rpx;
  height: 100%;
  line-height: 1;
  padding-left: 30rpx;
  color: #312927;
  float: right;
  padding-top: 30rpx;
}
.name{
  font-size: 32rpx;
  margin-bottom: 30rpx;
}
.name text{
  margin-right: 20rpx;
  max-width: 500rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  display: inline-block;
}
.other{
  font-size: 24rpx;
  margin-bottom: 30rpx;
}
.foodname{
  font-size: 32rpx;
  margin-bottom: 30rpx;
}
.foodname text{
  margin-left: 20rpx;
}
.past .right{
  color: #888888;
}
.past .zuo,.past .shi{
  background: #888;
}
.pastbg{
  width: 177rpx;
  height: 91rpx;
  position: absolute;
  top: 55rpx;
  right: 27rpx;
  z-index: 99;
}
.get{
  width: 177rpx;
  height: 91rpx;
  position: absolute;
  top: 20rpx;
  right: 27rpx;
  z-index: 99;
}
.empty{
  width: 100%;
  height: 100%;
  background: #fff;
  position: relative;
  overflow: hidden;
  padding-top: 230rpx;
}
.empty image{
  width: 342rpx;
  height: 255rpx;
  margin: 0 auto 70rpx;
  display: block;
}
.emptytext{
  width: 100%;
  font-size: 30rpx;
  color:#888888;
  text-align: center;
  line-height: 1;
}
.more{
  width: 10rpx;
  height: 18rpx;
  position: absolute;
  right: 20rpx;
  top: 50%;
  transform: translateY(-50%)
}