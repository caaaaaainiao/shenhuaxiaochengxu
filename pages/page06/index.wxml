	<view class="rule">
		<view class="txt1">办卡须知</view>
		<view class="txt2">
      <text class='p'>{{ruleDescription}}</text>
		</view>
	</view>
	<view class="form">
		<view class="item">
			<image src="/images/icon-phone.png" class="icon" mode="widthFix"></image>
			<input class="input" disabled value='{{phone}}' placeholder="{{phone}}" placeholder-class="phColor"/>
		</view>
		<view class="item">
			<image src="/images/icon-password.png" class="icon" mode="widthFix"></image>
			<input type='number' password class="input" value="" bindinput="" bindblur="getPassword" placeholder="设置密码" placeholder-class="phColor"/>
		</view>
		<view class="item">
			<image src="/images/icon-password.png" class="icon" mode="widthFix"></image>
			<input type='number' password class="input" value="" bindinput="" bindblur="surePassword" placeholder="确认密码" placeholder-class="phColor"/>
		</view>
		<view class="item">
			<image src="/images/icon-person.png" class="icon" mode="widthFix"></image>
			<input class="input" value="" bindinput="" bindblur="getName" placeholder="输入姓名" placeholder-class="phColor"/>
		</view>
    <view class="item" wx:if="{{isShow}}">
			<image src="/images/icon-person.png" class="icon" mode="widthFix"></image>
			<input type='number' class="input" value="" bindinput="" bindblur="getId" placeholder="输入身份证号码" placeholder-class="phColor"/>
		</view>
		<view class="item">
			<image src="/images/icon-person.png" class="icon" mode="widthFix"></image>
			<picker mode="date" value="{{date999}}" start="" end="2018-09-01" bindchange="bindDateChange999">
				<input class="input"  value="{{date999}}" bindinput="" adjust-position="true" bindblur="btnBlurInput" placeholder="选择生日" disabled='disabled' placeholder-class="phColor"/>
			</picker>
		</view>
		<view class="item">
			<image src="/images/icon-sex.png" class="icon" mode="widthFix"></image>
			<picker bindchange="bindPickerChange002" value="{{index002}}" range="{{array002}}">
				<input class="input" value="{{array002[index002]}}" bindinput="" adjust-position="true" bindblur="btnBlurInput" placeholder="选择性别" disabled='disabled' placeholder-class="phColor"/>
			</picker>
		</view>
	</view>
	<view class="operate">
		<view class="agree">
			<checkbox value="" checked="checked"/>
      我已阅读并同意 <navigator class="red" bindtap='cinemaAgreement'> 《会员卡协议》</navigator>
		</view>
		<view class="total">
			<view class="left">开卡需支付: 
      <text class="red" wx:if="{{cinematype==0}}">0</text><text class="red" wx:else>{{credit}}</text>
      </view>
			<button class="btn btn-red" bindtap="btnShowExchange2" hover-class="none">立即开卡</button>
		</view>
	</view>
</view>

<!-- 会员服务协议 -->
  <view style='width: 100%;height: 100%;background: rgba(0,0,0,.5);position: fixed;top: 0;left: 0;z-index: 99;'wx:if="{{cinemaAgreement}}">
    <view style='width: 100%;height: 560rpx;background: #fff;padding-top: 100rpx;border-radius: 16rpx 16rpx 0 0;  position: absolute;left: 0;bottom: 0;'>
    <image style='width: 40rpx;height: 40rpx;position: absolute;top: 20rpx;right: 20rpx;'src='/images/close.png' bindtap='closeCinemaAgreement'></image>
    <view style='width: 540rpx;background: #EEEEEE;margin: 0 auto 160rpx;padding-left: 30rpx;border-radius: 16rpx;height:200rpx;padding-right:30rpx;font-size:28rpx;overflow:scroll;'>{{agreement}}</view>
  </view>
</view>
<!-- 会员卡充值弹窗   -->
<block wx:if="{{showAlertExchange2}}">
	<view class="alert alert-exchange">
		<view class="over-close" bindtap="closeShow"></view>
		<view class="box-bottom">
			<view class="title">{{levelName}}</view>
			<view class="choose">
				<block wx:for="{{rule}}" wx:key="item" wx:for-item="item" wx:for-index="index">
					<button class="item {{item.checked?'on':''}}" bindtap="btnChoose" data-id="{{index}}" data-price="{{item.credit}}" data-rule="{{item.ruleCode}}" hover-class="none">
						{{item.credit}}
						<view class="tips">赠送{{item.givenAmount}}元</view>
					</button>
				</block>
			</view>
			<view class="ad">
				<!-- 送20元卖品券 -->
			</view>
			<view class="operate">
				<button class="btn btn-red" bindtap="pay" hover-class="none" disabled='{{disabled}}'>确认充值</button>
			</view>
		</view>
	</view>
</block>