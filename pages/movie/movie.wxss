/* pages/movie/movie.wxss */
.container{
  width: 100%;
  height: 100%;
  position: relative;
  overflow: auto;
  background: #3B3B3B;
}
.header{
  width: 100%;
  height: 360rpx;
  position: relative;
}
.location{
  width: auto;
  height: 50rpx;
  background: rgba(1,1,1,.1);
  padding: 0 15rpx 0 10rpx;
  position: absolute;
  top: 10rpx;
  left: 20rpx;
  font-size: 24rpx;
  color: #fff;
  border-radius: 25rpx;
  box-sizing: border-box;
  line-height: 50rpx;
}
.location image{
  width: 40rpx;
  height: 40rpx;
  margin-top: 5rpx;
  margin-right: 5rpx;
  float: left;
}
.bg{
  width: 100%;
  height: 360rpx;
  position: absolute;
  top: 0;
  left: 0;
}
.bg image{
  width: 100%;
  height: 100%;
}
.list{
  width: 100%;
  overflow: hidden;
  padding-top: 40rpx;
  padding-left: 40rpx;
}
.box{
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  background: rgba(2, 2, 2, 0.7);
  font-weight: bold;
}
.room{
  width: 300rpx;
  height: 400rpx;
  border-radius: 10rpx;
  float: left;
  position: relative;
  overflow: hidden;
  margin-bottom: 40rpx;
}
.room:nth-child(2n+1){
  margin-right: 70rpx;
}
.listbg{
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
}
.moviename{
  width: 260rpx;
  line-height: 40rpx;
  font-size: 30rpx;
  color: #fff;
  position: absolute;
  left: 20rpx;
  bottom: 255rpx;
  text-align: center;
}
.address{
  width: 100%;
  line-height: 1;
  font-size: 24rpx;
  color: #fff;
  position: absolute;
  left: 0;
  bottom: 220rpx;
  text-align: center;
}
.movietime{
  width: 100%;
  line-height: 1;
  font-size: 24rpx;
  color: #fff;
  position: absolute;
  left: 0;
  bottom: 175rpx;
  text-align: center;
}
.roomin{
  width: 120rpx;
  height: 50rpx;
  background: #E04F2D;
  font-size: 24rpx;
  color: #fff;
  line-height: 50rpx;
  text-align: center;
  border-radius: 25rpx;
  box-shadow:0 8rpx 16rpx 0 rgba(247,141,59,0.3);
  position: absolute;
  left: 90rpx;
  bottom: 70rpx;
}
.empty{
  width: 100%;
  height: auto;
  padding-top: 16vh;
}
.empty image{
  width: 342rpx;
  height: 255rpx;
  margin: 0 auto 70rpx;
  display: block;
}
.emptytext{
  width: 100%;
  font-size: 30rpx;
  color:#888888;
  text-align: center;
  line-height: 1;
}