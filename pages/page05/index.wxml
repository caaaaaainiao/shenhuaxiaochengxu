<view class="wrap page05">
	<view class="panel" style="background-color:RGB(224,79,46)">
		<image src="{{face}}" class="icon" mode="widthFix"></image>
		<view class="r">
			<view class="txt1">{{username}}</view>
			<view class="txt2">积分：{{score}}</view>
		</view>
		<!-- <navigator class="btn-record" url="">充值记录</navigator> -->
	</view>

	<view class="list" id="list">
    <view class='card' wx:for="{{status}}" wx:for-item="card" wx:key="card" wx:if="{{show==0}}">
      <image src="{{card.memberCardImage}}" class="cardImg" mode="widthFix"></image>
      <view class="number">NO：{{card.num}}</view>
      <view class="center">
				<view class="txt1">{{card.levelName}}</view>
				<view class="txt2">余额：{{card.balance}}</view>
			</view>
      <button class="btn-delete" bindtap="btnDelete" data-cardno="{{card.num}}" data-pass="{{card.pass}}" hover-class="none">
				<image src="/images/btn51.png" class="icon" mode="widthFix"></image>
			</button>
			<button class="btns" bindtap="btnShowExchange2" hover-class="none" data-code="{{card.levelCode}}" data-cardNo="{{card.num}}" data-pass="{{card.pass}}">立即充值</button>
    </view>
	</view>
