<!-- 会员卡充值弹窗   -->
<block wx:if="{{showAlertExchange2}}">
	<view class="alert alert-exchange">
		<view class="over-close" bindtap="closeShow"></view>
		<view class="box-bottom">
			<view class="title">{{levelName}}：{{cardno}}</view>
			<view class="choose">
				<block wx:for="{{rule}}" wx:key="item" wx:for-item="item" wx:for-index="index">
					<button class="item {{item.checked?'on':''}}" bindtap="btnChoose" data-id="{{index}}" data-price="{{item.credit}}" data-rule="{{item.ruleCode}}" hover-class="none">
						{{item.credit}}
						<view class="tips">赠送{{item.givenAmount}}元</view>
					</button>
				</block>
			</view>
			<view class="ad">
				<!-- 送20元卖品券 -->
			</view>
			<view class="operate">
				<button class="btn btn-red" bindtap="pay" hover-class="none">确认充值</button>
			</view>
		</view>
	</view>
</block>