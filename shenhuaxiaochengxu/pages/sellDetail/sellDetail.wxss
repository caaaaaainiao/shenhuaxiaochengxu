/* pages/sellDetail/sellDetail.wxss */

.container {
  width: 100%;
  height: 100%;
  position: relative;
  overflow: hidden;
  /* background: red; */
  background: #E04F2E;
}

.bannerbg {
  width: 100%;
  height: 360rpx;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 9;
   transition: all 0.2s linear;
}
.bannerbg image{
  width: 100%;
  height: 360rpx;
}
.location {
  width: auto;
  height: 50rpx;
  background: rgba(1, 1, 1, 0.1);
  padding: 0 15rpx 0 10rpx;
  position: absolute;
  top: 10rpx;
  left: 20rpx;
  font-size: 24rpx;
  color: #fff;
  border-radius: 25rpx;
  box-sizing: border-box;
  line-height: 50rpx;
  z-index: 10;
}

.location image {
  width: 40rpx;
  height: 40rpx;
  margin-top: 5rpx;
  margin-right: 5rpx;
  float: left;
 
}

.content {
  width: 100%;
  height: 100%;
  padding-top: 370rpx;
  padding-bottom: 98rpx;
  overflow-y: auto;
  position: absolute;
  top: 0;
  left: 0;
  background: #fff;
  z-index: 2;
  transition: all 0.2s linear;
}

.contentscroll{
  padding-top: 70rpx;
  background: #E04F2E;
}
.foodclass {
  width: 150rpx;
  height: 100%;
  float: left;
  background: #efefef;
}

.foodtitle {
  width: 150rpx;
  height: 150rpx;
  background: #efefef;
  padding-top: 37rpx;
}

.foodtitle image {
  width: 60rpx;
  height: 60rpx;
  display: block;
  margin: 0 auto 15rpx;
}

.foodtitle text {
  display: block;
  width: 100%;
  text-align: center;
  font-size: 20rpx;
  color: #888;
  line-height: 1;
}
.onkey{
  background: #fff;
}
.foodDetail{
  width: 600rpx;
  height: 100%;
  float: left;
  background: #fff;
  padding-bottom: 50rpx;
}
.detailclass{
  width: 100%;
  height: 75rpx;
  line-height: 75rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  font-size: 24rpx;
  color: #E04F2E;
}
.detailclass text{
  margin: 0 30rpx;
}
.detailclass image{
  width: 41rpx;
  height: 10rpx;
}
.rotate180{
  transform: rotate(180deg)
}
.food{
  width: 560rpx;
  height: 240rpx;
  box-shadow:0 2rpx 10rpx 0 rgba(0, 0, 0, 0.2);
  margin: 0 auto 20rpx;
  border-radius: 10rpx;
  overflow: hidden;
  position: relative;
}
.foodpic{
  width: 300rpx;
  height: 240rpx;
}
.foodname{
  width: 220rpx;
  font-size: 26rpx;
  line-height: 32rpx;
  color: #312927;
  font-weight: bold;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  position: absolute;
  right: 20rpx;
  top: 25rpx;
  text-align: right;
}
.foodname text{
  width: 40rpx;
  height: 24rpx;
  color: #fff;
  text-align: center;
  line-height: 24rpx;
  background: #F7A300;
  margin-right: 10rpx;
  font-size: 18rpx;
}
.foodprice{
  font-size: 32rpx;
  color: #312927;
  font-weight: bold;
  position: absolute;
  right: 20rpx;
  top: 95rpx;
}
.foodprice text{
  font-size: 26rpx;
  color: #AAAAAA;
  font-weight: normal;
  margin-right: 10rpx;
  text-decoration: line-through;
}
.foodnum{
  width: 44rpx;
  height: 44rpx;
  background:#EEEEEE;
  border-radius: 22rpx;
  font-size: 30rpx;
  color: #312927;
  text-align: center;
  position: absolute;
  top: 170rpx;
  right: 20rpx;
  transition: width 0.5s linear;
}
.add{
  width: 50rpx;
  height: 50rpx;
  position: absolute;
  right: -3rpx;
  top: -3rpx;
}
.minus{
  width: 50rpx;
  height: 50rpx;
  position: absolute;
  left: -3rpx;
  top: -3rpx;
}
.width180{
  width: 180rpx;
}
.bottom{
  width: 100%;
  height: 98rpx;
  position: absolute;
  bottom: 0;
  left: 0;
  z-index: 9;
}
.bottom_left{
  width: 550rpx;
  height: 98rpx;
  float: left;
  background: #E04F2D;
  font-size: 24rpx;
  color: #fff;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  position: relative;
}
.bottom_left text{
   font-weight: bold;
    font-size: 36rpx;
}
.bottom_left image{
  width: 60rpx;
  height: 60rpx;
  margin-left: 34rpx;
}
.totalnum{
  min-width: 30rpx;
  height: 30rpx;
  border-radius: 15rpx;
  font-size: 20rpx;
  text-align: center;
  background: #312927;
  position: absolute;
  top: 14rpx;
  left: 72rpx;
  font-weight: normal;
}
.bottom_right{
  width: 200rpx;
  height: 98rpx;
  float: left;
  background: #312927;
  font-size: 30rpx;
  color: #fff;
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  align-items: center;
}
.bottom_right image{
  width: 40rpx;
  height: 40rpx;
  margin-right: 15rpx;
}
.buy{
  width: 550rpx;
  height: 50rpx;
  line-height: 50rpx;
  font-size: 24rpx;
  color: #312927;
  text-align: center;
  background: #FAF1DF;
  border-radius: 20rpx 20rpx 0 0;
  position: absolute;
  left: 100rpx;
  bottom: 100rpx;
}
.buy text{
  color:#E04F2D; 
}
