/* pages/chooseSeats/chooseSeats.wxss */

.container {
  width: 100%;
  height: 100%;
  background: #fff;
  position: relative;
  overflow: auto;
  padding-bottom: 98rpx;
}

.header {
  width: 100%;
  height: 120rpx;
  border-bottom: 1rpx solid #ddd;
  padding-top: 24rpx;
  position: relative;
}

.detail {
  font-size: 30rpx;
  color: #312927;
  font-weight: bold;
  float: left;
  margin-left: 40rpx;
  line-height: 1;
}

.change {
  width: 120rpx;
  height: 35rpx;
  text-align: center;
  line-height: 32rpx;
  font-size: 24rpx;
  color: #e04f2e;
  border: 1rpx solid #e04f2e;
  float: left;
  margin-left: 20rpx;
  border-radius: 17.5rpx;
  margin-top: -2rpx;
}

.address {
  font-size: 24rpx;
  color: #888;
  line-height: 1;
  position: absolute;
  left: 40rpx;
  bottom: 23rpx;
}

.explain {
  width: 100%;
  height: 80rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  margin-bottom: 15rpx;
}

.explain view {
  margin-left: 35rpx;
}

.explain view:first-child {
  margin-left: 0;
}

.explain image {
  width: 38rpx;
  height: 34rpx;
}

.explain text {
  font-size: 23rpx;
  color: #1a1a1a;
  margin-left: 13rpx;
}

.room {
  width: 328rpx;
  height: 40rpx;
  font-size: 23rpx;
  color: #1a1a1a;
  line-height: 40rpx;
  text-align: center;
  margin: 0 auto 30rpx;
  position: relative;
  /* background: url("http://192.168.1.65:8080/webapps/sh/seatbanner.png") */
}

.room image {
  width: 100%;
  height: 100%;
  position: absolute;
  left: 0;
  top: 0;
}

.room text {
  width: 100%;
  text-align: center;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 2;
}

.seatArea {
  width: 100%;
  height: 690rpx;
  /* padding: 20rpx 0 30rpx; */
  background: #f6f6f6;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  overflow: hidden;
  position: relative;
}

/* .seats {
  width: 670rpx;
  height: 100%;
  display: flex;
  flex-direction: row;
  margin: auto;
} */
.row {
  width: auto;
  height: 56rpx;
  margin-bottom: 10rpx;
  white-space: nowrap;
}

.box {
  display: inline-block;
  overflow: hidden;
  /* transform-origin: top left; */

}

.seat {
  width: 58rpx;
  height: 56rpx;
  margin-right: 8rpx;
  background:url(https://app.legendpicture.com/upload/seat/seat2.png) no-repeat;
  background-size: 100% 100%;
  /* float: left; */
  display: inline-block;
}

.seat:last-child {
  margin-right: 0;
}

.empty {
  background: #f6f6f6;
}

.available {
  background:url(https://app.legendpicture.com/upload/seat/seat3.png) no-repeat;
  background-size: 100% 100%;
}

.seatLeft {
  width: 62rpx;
  height: 55rpx;
  margin-right: 0;
  background:url(https://app.legendpicture.com/upload/seat/seatleft.png) no-repeat;
  background-size: 100% 100%;
}

.seatMiddle {
  width: 62rpx;
  height: 55rpx;
  margin-right: 0;
  background:url(https://app.legendpicture.com/upload/seat/seatmiddle.png) no-repeat;
  background-size: 100% 100%;
}
.seatRight {
  width: 62rpx;
  height: 55rpx;
  background:url(https://app.legendpicture.com/upload/seat/seatright.png) no-repeat;
  background-size: 100% 100%;
}

.seatRight {
  /* background: gray; */
}
.seat.empty{
  visibility: hidden;
}
.seatLeft.sell{
  background: url(https://app.legendpicture.com/upload/seat/seatleftsell.png) no-repeat;
  background-size: 100% 100%;
}
.seatMiddle.sell{
  background: url(https://app.legendpicture.com/upload/seat/seatmiddlesell.png) no-repeat;
  background-size: 100% 100%;
}
.seatRight.sell{
  background: url(https://app.legendpicture.com/upload/seat/seatrightsell.png) no-repeat;
  background-size: 100% 100%;
}
.seat.select{
  background: url(https://app.legendpicture.com/upload/seat/seat1.png) no-repeat;
  background-size: 100% 100%;
}
.seatLeft.select{
  background: url(https://app.legendpicture.com/upload/seat/seatleftselect.png) no-repeat;
  background-size: 100% 100%;
}
.seatMiddle.select{
  background: url(https://app.legendpicture.com/upload/seat/seatmiddleselect.png) no-repeat;
  background-size: 100% 100%;
}
.seatRight.select{
  background: url(https://app.legendpicture.com/upload/seat/seatrightselect.png) no-repeat;
  background-size: 100% 100%;
}
.tickets{
  width: 100%;
  height: 145rpx;
  padding-top: 40rpx;
  padding-left: 20rpx;
}
.ticket{
  width: 154rpx;
  height: 78rpx;
  background: url(https://app.legendpicture.com/upload/seat/ticket.png) no-repeat;
  background-size: cover;
  float: left;
  margin-right: 24rpx;
  padding-top: 10rpx;
}
.seatnum{
  font-size: 23rpx;
  color: #312927;
  text-align: center;
  line-height: 1;
  margin-bottom: 10rpx;
}
.seatprice{
  font-size: 23rpx;
  color: #E04F2E;
  text-align: center;
  line-height: 1;
}
.pay{
  width: 100%;
  height: 78rpx;
  line-height: 78rpx;
  background: linear-gradient(-84deg,rgba(224,79,46,1),rgba(224,117,46,1));
  font-size: 30rpx;
  color: #fff;
  font-weight: bold;
  text-align: center;
  position: absolute;
  left: 0;
  bottom: 0;
}
.pay text{
  margin-left: 20rpx;
}
.rownum{
  width: 30rpx;
  height: auto;
  background: rgba(0,0,0,.5);
  position: absolute;
  left: 20rpx;
  top: 50%;
  border-radius: 15rpx;
  z-index: 9;
}
.num{
  font-size: 24rpx;
  color: #fff;
  text-align: center;
  line-height: 56rpx;
  height: 56rpx;
  margin-bottom: 10rpx;
}
.num:last-child{
  /* margin-bottom: 0; */
}
.middle{
  width: 2rpx;
  height: 110%;
  border-left: 2rpx dotted #888; 
  position: absolute;
  top: -5%;
  left: 50%;
  margin-left: -1rpx;
}
